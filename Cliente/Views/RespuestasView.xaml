<UserControl x:Class="Cliente.Views.RespuestasView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cliente.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="#FF2D2D30">
        <Border Background="#FF1E1E1E" CornerRadius="15" Margin="20" Padding="30" BorderThickness="1" BorderBrush="#FF3E3E42">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.5" BlurRadius="10"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
                <TextBlock Text="{Binding TiempoRestante}" 
                           FontSize="32" 
                           Foreground="#FFFF6B6B" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20" 
                           FontWeight="Bold">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.3" BlurRadius="3"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="{Binding Pregunta.Enunciado}" 
                           FontSize="22" 
                           Foreground="White" 
                           TextAlignment="Center" 
                           Margin="0,0,0,30" 
                           TextWrapping="Wrap"
                           FontWeight="SemiBold"/>

                <Label Content="Seleccione una respuesta:" 
                       FontSize="18" 
                       Foreground="#FF007ACC" 
                       Margin="0,0,0,15"
                       FontWeight="SemiBold"/>

                <ItemsControl ItemsSource="{Binding Pregunta.Opciones}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="2" Columns="2" Margin="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}" 
                                    IsEnabled="{Binding DataContext.Botones, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    Command="{Binding DataContext.SeleccionarOpcionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}" 
                                    Margin="8" 
                                    FontSize="16" 
                                    Height="120"
                                    Background="#FF007ACC" 
                                    Foreground="White" 
                                    BorderBrush="#FF005A9E" 
                                    Padding="15" 
                                    Cursor="Hand">
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="3" Color="Black" Opacity="0.3" BlurRadius="5"/>
                                </Button.Effect>
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="1"
                                                            CornerRadius="12">
                                                        <TextBlock Text="{TemplateBinding Content}"
                                                                   TextWrapping="Wrap"
                                                                   TextAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Margin="{TemplateBinding Padding}"
                                                                   Foreground="{TemplateBinding Foreground}"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF1E90FF"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="{Binding MensajeEstado}"
                           FontSize="18" 
                           Foreground="#FF00CC99"
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,20"
                           TextWrapping="Wrap" 
                           TextAlignment="Center"
                           FontWeight="SemiBold"/>

                <Button Content="Enviar Respuesta" 
                        Command="{Binding EnviarCommand}"
                        IsEnabled="{Binding Botones}"
                        Width="300" 
                        Margin="0,10,0,0" 
                        FontSize="18" 
                        Background="#FF007ACC" 
                        Foreground="White"
                        BorderBrush="#FF005A9E" 
                        Padding="15" 
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF1E90FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3" Color="Black" Opacity="0.3" BlurRadius="5"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
