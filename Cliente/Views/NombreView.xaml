<UserControl x:Class="Cliente.Views.NombreView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cliente.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF2D2D30">
        <Border Background="#FF1E1E1E" CornerRadius="15" Margin="20" Padding="30" BorderThickness="1" BorderBrush="#FF3E3E42">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.5" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="¡Bienvenido al Quiz!" 
                           FontSize="28" 
                           Foreground="#FF007ACC" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>
                <Label Content="Ingrese su nombre:" 
                       FontSize="18" 
                       Foreground="White" 
                       Margin="0,0,0,10"
                       FontWeight="SemiBold"/>
                <TextBox Text="{Binding Respuesta.nombre, UpdateSourceTrigger=PropertyChanged}" 
                         Width="250" 
                         Margin="5" 
                         FontSize="16"
                         Foreground="White" 
                         Background="#FF3E3E42" 
                         BorderBrush="#FF007ACC" 
                         BorderThickness="2" 
                         Padding="10"
                         CaretBrush="White">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#FF1E90FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <Button Command="{Binding ContinuarCommand}" 
                        Content="Continuar" 
                        Width="250" 
                        Margin="0,30,0,0" 
                        FontSize="18" 
                        Background="#FF007ACC" 
                        Foreground="White"
                        BorderBrush="#FF005A9E" 
                        Padding="15" 
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="10">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF1E90FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3" Color="Black" Opacity="0.3" BlurRadius="5"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>