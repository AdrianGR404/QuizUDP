<UserControl x:Class="Servidor.Views.Quiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Servidor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF2D2D30">
        <Border Background="#FF1E1E1E" CornerRadius="15" Margin="20" Padding="30" BorderThickness="1" BorderBrush="#FF3E3E42">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.5" BlurRadius="10"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Panel de Control del Quiz" 
                           FontSize="28" 
                           TextAlignment="Center" 
                           Margin="0,0,0,20" 
                           Foreground="#FF007ACC" 
                           FontWeight="Bold"/>

                <TextBlock Text="{Binding Pregunta.Enunciado}" 
                           FontSize="22" 
                           TextAlignment="Center" 
                           Margin="0,0,0,20" 
                           Foreground="White" 
                           FontWeight="SemiBold"
                           TextWrapping="Wrap"/>

                <ItemsControl ItemsSource="{Binding Pregunta.Opciones}" Margin="0,0,0,20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FF3E3E42" 
                                    CornerRadius="10" 
                                    Margin="5" 
                                    Padding="15">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.2" BlurRadius="3"/>
                                </Border.Effect>
                                <TextBlock Text="{Binding}" 
                                           FontSize="18" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock Text="{Binding TiempoRestante}" 
                           FontSize="36" 
                           Foreground="#FFFF6B6B" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20" 
                           FontWeight="Bold">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.3" BlurRadius="3"/>
                    </TextBlock.Effect>
                </TextBlock>

                <Button Content="Iniciar Quiz" 
                        Command="{Binding IniciarCommand}" 
                        Margin="0,10,0,0" 
                        FontSize="18" 
                        Background="#FF007ACC" 
                        Foreground="White" 
                        BorderBrush="#FF005A9E" 
                        Padding="15" 
                        HorizontalAlignment="Center" 
                        Width="200" 
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF1E90FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3" Color="Black" Opacity="0.3" BlurRadius="5"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>